{
  "name": "@itsfadnis/jsonapi-client",
  "version": "2.1.2",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist",
    "test": "yarn lint && jest && yarn build && bundlesize",
    "lint": "eslint src test",
    "prepare": "yarn build"
  },
  "author": "Nikhil Fadnis",
  "license": "ISC",
  "description": "A convenient module to consume a jsonapi service",
  "dependencies": {
    "jsonapi-serializer": "git+https://github.com/itsfadnis/jsonapi-serializer.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.42",
    "@babel/core": "^7.0.0-beta.42",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "bundlesize": "^0.18.0",
    "cross-fetch": "^3.0.0",
    "eslint": "^4.18.2",
    "husky": "^4.2.3",
    "jest": "^23.0.0-alpha.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "bundlesize": [{
    "path": "./dist/model.js",
    "maxSize": "13 kB",
    "compression": "none"
  }, {
    "path": "./dist/http-adapter.js",
    "maxSize": "3.5 kB",
    "compression": "none"
  }, {
    "path": "./dist/jsonapi-error.js",
    "maxSize": "3.5 kB",
    "compression": "none"
  }],
  "repository": {
    "type": "git",
    "url": "https://github.com/itsfadnis/jsonapi-client.git"
  },
  "jest": {
    "collectCoverage": true,
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "moduleNameMapper": {
      "jsonapi-serializer/lib/serializer": "<rootDir>/test/__mocks__/serializer.js",
      "jsonapi-serializer/lib/deserializer": "<rootDir>/test/__mocks__/deserializer.js"
    }
  }
}
